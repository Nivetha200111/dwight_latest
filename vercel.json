{
  "version": 2,
  "builds": [
    {
      "src": "api/run_simulation.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": "backend/**/*.py",
        "maxLambdaSize": "50mb"
      }
    },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "style.css", "use": "@vercel/static" },
    { "src": "script.js", "use": "@vercel/static" },
    { "src": "favicon.svg", "use": "@vercel/static" },
    { "src": "sounds/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/run_simulation", "dest": "/api/run_simulation.py" },
    { "src": "/sounds/(.*)", "dest": "/sounds/$1" },
    { "src": "/(.*\\.(?:css|js|svg))", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
