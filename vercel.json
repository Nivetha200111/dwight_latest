{
  "version": 2,
  "framework": null,
  "buildCommand": "echo \"Static deploy - no React build\"",
  "devCommand": "echo \"Use local scripts: start_frontend.sh / start_backend.sh\"",
  "installCommand": "pip install -r requirements.txt",
  "builds": [
    {
      "src": "api/run_simulation.py",
      "use": "@vercel/python",
      "config": { "includeFiles": "backend/**/*.py" }
    },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "style.css", "use": "@vercel/static" },
    { "src": "script.js", "use": "@vercel/static" },
    { "src": "favicon.svg", "use": "@vercel/static" },
    { "src": "sounds/(.*)", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/run_simulation", "dest": "/api/run_simulation.py" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
